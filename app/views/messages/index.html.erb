<div class="header">
  <div class="container">
    <img src="mail.jpeg">
    <h1>Messanger</h1>
  </div>
</div>

<div class="messages">
  <div class="container">

<% @messages.each do |message| %>
<div class="message">
  <p class="content">
    <%= message.content %>
  </p>
  <p class="time">
    <%= message.created_at %>
  </p>
  <%= link_to 'Edit', edit_message_path(message.id) %>
  <%= link_to 'Delete', message_path(message.id), method: :delete, data: { confirm: "are you ok?" } %>
</div>
<% end %>
<%= link_to 'New Message', new_message_path %>

  </div>
</div>
